//Напишите программу, которая считает количество элементов в массиве, кратных числу, которое вводится с консоли.


#include <iostream>
using namespace std;

int main() {
    int arr[] = {500, 4, 24, 15, 100, 105};
    int size = sizeof(arr) / sizeof(arr[0]);
    int number;
    
    cout << "Введите число: ";
    cin >> number;

    int count = 0;
    for (int i = 0; i < size; i++) {
        if (arr[i] % number == 0) {
            count++;
        }
    }

    cout << "Количество элементов, кратных " << number << ": " << count << endl;
    return 0;
}
