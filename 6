//Допишите программу, которая будет считать сумму элементов динамического массива.

//Допишите программу, которая будет считать сумму элементов динамического массива.


#include <iostream>
using namespace std;

int main() {
    int size = 10;
    int *a = new int[size];
    int sum = 0;

    for (int i = 0; i < size; ++i) {
        a[i] = i;
    }

    for (int i = 0; i < size; ++i) {
        sum += a[i];
    }

    cout << "Сумма элементов динамического массива: " << sum << endl;

    delete[] a;
    return 0;
}
